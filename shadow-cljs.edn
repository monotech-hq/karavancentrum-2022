
{:source-paths ["source-code" "monoset/source-code"]
 :builds
 {:site        {:asset-path "/js/core"
                :devtools {:watch-dir "resources"
                           :after-load boot-loader.project-emulator.frontend.site/render-site!}
                :modules {:site {:init-fn boot-loader.project-emulator.frontend.site/start-site!}}
                :output-dir "resources/public/js/core"
                ; BUG#0012
                ; A CKEditor miatt szükséges az {:output-feature-set :es-next} beállítás!
                :compiler-options {:infer-externs true :output-feature-set :es-next}
                :target :browser}

  :app          {:asset-path "/js/core"
                 :devtools {:watch-dir "resources"
                            :after-load boot-loader.project-emulator.frontend.app/render-app!}
                 :modules {:app {:init-fn boot-loader.project-emulator.frontend.app/start-app!}}
                 :output-dir "resources/public/js/core"
                 ; BUG#0012
                 :compiler-options {:infer-externs true :output-feature-set :es-next}
                 :target :browser}

  :site-ready  {:modules {:site {:init-fn boot-loader.project-emulator.frontend.site/start-site!}}
                ; BUG#0012
                :compiler-options {:infer-externs true :output-feature-set :es-next}
                :optimizations :advanced
                :asset-path "/js/core"
                :output-dir "resources/public/js/core"
                :target :browser}

  :app-ready    {:modules {:app {:init-fn boot-loader.project-emulator.frontend.app/start-app!}}
                 ; BUG#0012
                 :compiler-options {:infer-externs true :output-feature-set :es-next}
                 :optimizations :advanced
                 :asset-path "/js/core"
                 :output-dir "resources/public/js/core"
                 :target :browser}}}
